    themeChips.forEach(chip => {
      chip.addEventListener('click', () => {
        themeChips.forEach(c => c.classList.remove('selected'));
        chip.classList.add('selected');
        this.selectedAccent = chip.getAttribute('data-theme') || 'smile';
        this.applyTheme();
      });

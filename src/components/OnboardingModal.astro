        // Change color as approaching limit
        if (count > 450) {
          charCount.style.color = 'rgb(var(--md-error))';
        } else if (count > 400) {
          charCount.style.color = 'rgb(var(--md-warning))';
        } else {
          charCount.style.color = 'rgb(var(--md-primary))';
        }

}

.theme-option {
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.theme-option:hover {
  transform: translateY(-4px);
}

.theme-preview {
  width: 100%;
  height: 100px;
  border-radius: 1rem;
  margin-bottom: 0.75rem;

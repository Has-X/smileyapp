.status-icon-bg:hover {
  background: linear-gradient(135deg, 
    rgba(var(--md-primary), 0.16) 0%, 
    rgba(var(--md-secondary), 0.12) 100%
  );
  transform: scale(1.02);
  box-shadow: 0 4px 12px rgba(var(--md-primary), 0.2);

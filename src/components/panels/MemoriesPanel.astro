---
import ViewToggle from '../ViewToggle.astro';
---

<div id="panel-memories" class="flex-1 flex flex-col hidden app-panel">
  <div class="p-6 max-w-4xl mx-auto w-full">
    <!-- Panel Header -->
    <div class="panel-section-header">
      <div class="header-left-section">
        <div class="section-title">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          Memories
        </div>
        <div class="section-count-island">
          <span class="section-count" id="memories-count">0</span>
        </div>
      </div>
      <ViewToggle panelId="panel-memories" />
    </div>
    
    <div class="memory-grid" id="memories-container">
      <div id="memories-empty" style="display: none;">
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-on-surface-variant mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          <h3 class="text-lg font-semibold text-on-surface mb-2">No Memories Saved Yet</h3>
          <p class="text-on-surface-variant mb-4">Your AI companion will save important moments and insights here.</p>
          <button class="btn-primary" onclick="window.smileApp?.switchPanel('chat')">Start Chatting</button>
        </div>
      </div>
    </div>
  </div>
</div>
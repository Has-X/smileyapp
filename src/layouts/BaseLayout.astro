---
interface Props {
  title?: string;
}

const { title = 'Smile AI' } = Astro.props;

// Import global styles
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      (function(){
        try {
          var mode = localStorage.getItem('smile-theme-mode') || 'light';
          var accent = localStorage.getItem('smile-accent-color') || 'smile';
          var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
          var theme = (mode === 'dark' || (mode === 'auto' && prefersDark)) ? (accent + '-dark') : accent;
          document.documentElement.setAttribute('data-theme', theme);
          localStorage.setItem('smile-theme', theme);
        } catch (e) {}
      })();
    </script>
    <style is:inline>
      @media (prefers-color-scheme: dark) {
        :root { color-scheme: dark; }
        html { background-color: #0f1115; }
      }
      @media (prefers-color-scheme: light) {
        :root { color-scheme: light; }
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="description" content="Smile AI - Chat with local open-weight AI models" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- PWA meta tags -->
    <meta name="theme-color" content="#3b82f6" />
    <script is:inline>
      // Keep the browser UI color in sync with the current accent
      (function(){
        function setThemeColorFromCSS(){
          try {
            var meta = document.querySelector('meta[name="theme-color"]');
            if (!meta) return;
            var style = getComputedStyle(document.documentElement);
            var rgb = style.getPropertyValue('--md-primary').trim();
            if (!rgb) return;
            var parts = rgb.split(/\s+/).map(function(v){ return parseInt(v, 10); });
            if (parts.length >= 3 && parts.every(Number.isFinite)) {
              meta.setAttribute('content', 'rgb(' + parts[0] + ', ' + parts[1] + ', ' + parts[2] + ')');
            }
          } catch(_){}
        }
        // Initial update and watch for theme changes
        setThemeColorFromCSS();
        var mo = new MutationObserver(setThemeColorFromCSS);
        mo.observe(document.documentElement, { attributes: true, attributeFilter: ['data-theme'] });
        window.addEventListener('load', setThemeColorFromCSS);
      })();
    </script>
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Smile AI" />
    
    <!-- Font preload -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="breath-indicator"></div>
    <div class="ambient-particles"></div>
    <slot />
    
    <script>
      const savedOnboarded = localStorage.getItem('smile-onboarding');
      (window as any).SmileApp = {
        onboarded: savedOnboarded === 'complete',
        showOnboardingModal: savedOnboarded !== 'complete'
      };
    </script>
  </body>
</html>
